<span id="cake">
</span>

<script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
<script>
$("#ingredients").click(function(){
var a = $("#apple").val(); 
var b = $("#banana").val();
var c = a + b;

$("#cake").text(c)

})
</script>
